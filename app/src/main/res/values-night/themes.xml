<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Dullard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. The main color for consumers to associate with the app! -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <item name="linkOnPrimary">@color/secondary</item>

        <!-- Secondary brand color. The lesser used color for things like the Floating Action Buttons! -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/secondary_text</item>

        <!-- Status bar color. The bar with the notification icons! -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. Use ?attr/item_name to set your colors outside of here! -->
        <!-- The custom attributes are defined in attrs.xml. The colors are defined in colors.xml. -->
        <!-- Example is ?attr/repo_card_ripple_color -->

        <!-- Ripple Color For Repo Cards -->
        <item name="repo_card_ripple_color">@color/ripple_color_dark</item>
        <item name="repo_card_background">@color/card_color_dark</item>

        <!-- Text Color For Repo Description - TODO: DEPRECATED -->
        <item name="textview_text_color">@color/white</item>
        <item name="settings_background">#121212</item>

        <!-- Preference Category Text Color -->
        <item name="colorAccent">@color/secondary</item>
    </style>

    <!-- Action Bar and Menu Theming -->
    <style name="Theme.Dullard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- For Dropdown Menu Text -->
        <item name="android:textColor">@color/white</item>
    </style>
</resources>